<h3>Bookings</h3>
<table class="table">
	<thead>
		<tr>
			<th>id</th>
			<th>from</th>
			<th>to</th>
			<th>passengers</th>
			<th>name</th>
			<th>email</th>
		</tr>
	</thead>
	<tbody>
		<% @bookings.each do |booking| %>
			<tr>
				<td><%= link_to(booking.id, booking) %></td>
				<td><%= link_to(booking.flight.departure_airport.name, 
													booking.flight.departure_airport) %></td>
				<td><%= link_to(booking.flight.arrival_airport.name,
													booking.flight.arrival_airport) %></td>
				<td><%= booking.passengers_number %></td>
				<% booking.passengers.each do |passenger| %>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td></td>
						<td><%= passenger.name %></td>
						<td><%= passenger.email %></td>
					</tr>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>